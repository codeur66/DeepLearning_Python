pipeline {
    agent none
    stages{
        stage('build'){
            agent{
                docker{
                    image 'python:node-build'
                }
            }
            steps{
                sh -c 'echo starts the data pipeline'
                sh -c 'python /home/nikoscf/PycharmProjects/DeepLearningWithPython/
