            }
            steps{
                sh -c 'echo starts the model'
                sh -c 'python /home/nikoscf/PycharmProjects/DeepLearningWithPython/
                            natural_language_processing/model/Model.py
            }
        }
        stage('test'){
                sh -c 'echo start the tests'
                sh '/home/nikoscf/PycharmProjects/DeepLearningWithPython/
                    natural_language_processing/utils/run_every_test.sh'
        }
        stage('deploy'){

        }
    }


}